<body class="forms create">
  {{>header}}
  <a href="login"><img src="../static/images/back.png" alt="arrow"></a> 

<main>   
      <h1>Create Account</h1>
        
      <form action="/createaccount" id="register" method="POST">
        <fieldset>
          <label for="fname">First name</label>
          <input type="fname" id="fname" name="fname" placeholder="Enter Name" value="" required>
        </fieldset>

        <fieldset>
          <label for="lname">Last name</label>
          <input type="lname" id="lname" name="lname" placeholder="Enter Name" value="" required>
        </fieldset>

        <fieldset>
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter Email" value="" required>   
        </fieldset>

        <fieldset>
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Create Password" value="" required>
        </fieldset>

        <fieldset>
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" placeholder="Confirm Password" value="" required>
        </fieldset>

        <div id="error"></div>
        
        <button type="submit" form="register">
          Create Account
        </button>
        
      </form>
</main>     

<script src="static/javascript/forms.js"></script>
  
</body>
 
       
